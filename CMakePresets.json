{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 1
  },
  "include": [
    "cmake/presets/LegacyPresets.json",
    "cmake/presets/VcpkgPresets.json"
  ],
  "configurePresets": [
    {
      "name": "debug",
      "inherits": ["dc-debug-vcpkg-dynamic"],
      "binaryDir": "build-debug",
      "displayName": "Debug",
      "environment": {
        "VOXER_VOICES_DOWNLOAD": "1",
        "VOXER_VOICES_LIST": "en_US+amy+medium"
      },
      "cacheVariables": {
        "VOXER_ACTIVE_LOG_LEVEL": "Debug",
        "VOXER_ENABLE_TESTS": true,
        "VOXER_ENABLE_CLI": true
      }
    },
    {
      "name": "release",
      "inherits": ["dc-release-vcpkg-dynamic"],
      "binaryDir": "build-release",
      "displayName": "Release",
      "environment": {
        "VOXER_VOICES_DOWNLOAD": "1",
        "VOXER_VOICES_LIST": "en_US+amy+medium"
      },
      "cacheVariables": {
        "VOXER_ACTIVE_LOG_LEVEL": "Info"
      }
    },
    {
      "name": "debug-docker",
      "inherits": ["dc-debug"],
      "binaryDir": "build-debug-docker",
      "displayName": "Debug [Docker]",
      "environment": {
        "VOXER_VOICES_DOWNLOAD": "1",
        "VOXER_VOICES_LIST": "en_US+amy+medium"
      },
      "cacheVariables": {
        "VOXER_ACTIVE_LOG_LEVEL": "Debug",
        "VOXER_ENABLE_TESTS": true,
        "VOXER_ENABLE_CLI": true
      }
    },
    {
      "name": "release-docker",
      "inherits": ["dc-release"],
      "binaryDir": "build-release-docker",
      "displayName": "Release [Docker]",
      "environment": {
        "VOXER_VOICES_DOWNLOAD": "1",
        "VOXER_VOICES_LIST": "en_US+amy+medium"
      },
      "cacheVariables": {
        "VOXER_ACTIVE_LOG_LEVEL": "Info"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "displayName": "Build Debug",
      "configurePreset": "debug",
      "jobs": 0,
      "verbose": true
    },
    {
      "name": "release",
      "displayName": "Build Release",
      "configurePreset": "release",
      "jobs": 0
    },
    {
      "name": "debug-docker",
      "displayName": "Build Debug [Docker]",
      "configurePreset": "debug-docker",
      "inherits": ["debug"]
    },
    {
      "name": "release-docker",
      "displayName": "Build Release [Docker]",
      "configurePreset": "release-docker",
      "inherits": ["release"]
    }
  ],
  "packagePresets": [
    {
      "name": "debug",
      "displayName": "Pack debug",
      "configurePreset": "debug",
      "generators": ["DEB"]
    },
    {
      "name": "release",
      "displayName": "Pack release",
      "configurePreset": "release",
      "generators": ["DEB"]
    },
    {
      "name": "debug-docker",
      "displayName": "Pack debug [Docker]",
      "inherits": ["debug"],
      "configurePreset": "debug-docker"
    },
    {
      "name": "release-docker",
      "displayName": "Pack release [Docker]",
      "inherits": ["release"],
      "configurePreset": "release-docker"
    }
  ],
  "workflowPresets": [
    {
      "name": "debug",
      "displayName": "Debug build and pack workflow",
      "steps": [
        {
          "type": "configure",
          "name": "debug"
        },
        {
          "type": "build",
          "name": "debug"
        },
        {
          "type": "package",
          "name": "debug"
        }
      ]
    },
    {
      "name": "release",
      "displayName": "Release build and pack workflow",
      "steps": [
        {
          "type": "configure",
          "name": "release"
        },
        {
          "type": "build",
          "name": "release"
        },
        {
          "type": "package",
          "name": "release"
        }
      ]
    },
    {
      "name": "debug-docker",
      "displayName": "Debug build and pack workflow [Docker]",
      "steps": [
        {
          "type": "configure",
          "name": "debug-docker"
        },
        {
          "type": "build",
          "name": "debug-docker"
        },
        {
          "type": "package",
          "name": "debug-docker"
        }
      ]
    },
    {
      "name": "release-docker",
      "displayName": "Release build and pack workflow [Docker]",
      "steps": [
        {
          "type": "configure",
          "name": "release-docker"
        },
        {
          "type": "build",
          "name": "release-docker"
        },
        {
          "type": "package",
          "name": "release-docker"
        }
      ]
    }
  ]
}
